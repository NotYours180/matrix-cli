#!/usr/bin/env node

require('./matrix-init');
// load app
require('../lib/app.js');

// exit on SIGHUP
process.on('SIGHUP', function () {
  process.exit(0);
});

// exit on SIGTERM
process.on('SIGTERM', function () {
  process.exit(0);
});

process.on('uncaughtException', function (e) {
  Matrix.loader.stop();
  if (e.hasOwnProperty('code') && e.code == 'ENOTFOUND') {
    console.log('Service unavailable, please try again later');
  } else {
    console.log('Matrix CLI Error:'.red, e, e.stack);
  }
  process.exit(0)
})
